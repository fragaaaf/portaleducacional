{
    "formulario_campos": [
        {
            "id": "turma",
            "label": "Turma:",
            "type": "radio",
            "options_source": "turmas.json",
            "required": true,
            "validation_message": "Selecione uma turma."
        },
        {
            "id": "estudantes",
            "label": "Estudantes Selecionados:",
            "type": "checkbox_group_dynamic",
            "required": true,
            "validation_message": "Selecione pelo menos um estudante.",
            "select_all_label": "Selecionar Todos os Estudantes da Turma"
        },
        {
            "id": "disciplina",
            "label": "Selecione a Disciplina:",
            "type": "radio_group",
            "options_source": "disciplina_assuntos.json",
            "required": true,
            "validation_message": "Selecione uma disciplina."
        },
        {
            "id": "assuntos",
            "label": "Assuntos para a Prova:",
            "type": "checkbox_group_dynamic",
            "required": true,
            "validation_message": "Selecione pelo menos um assunto.",
            "select_all_label": "Selecionar Todos os Assuntos da Disciplina"
        },
        {
            "id": "formatoPerguntas",
            "label": "Formato das Perguntas:",
            "type": "checkbox_group_dynamic",
            "options_source": "formato_perguntas.json",
            "required": true,
            "validation_message": "Selecione pelo menos um formato de pergunta."
        },
        {
            "id": "subtiposRespostaAberta",
            "label": "Subtipos de Questão (Resposta Aberta):",
            "type": "checkbox_group_dynamic",
            "options": {
                "TIPO1": "Tipo 1 (Lacuna: Valor Inicial)",
                "TIPO2": "Tipo 2 (Lacuna: Valor Final)",
                "TIPO3": "Tipo 3 (Lacuna: Passo)",
                "TIPO4": "Tipo 4 (Quantas repetições?)"
            },
            "required": false,
            "validation_message": "Selecione pelo menos um subtipo para Resposta Aberta.",
            "select_all_label": "Selecionar Todos os Subtipos"
        },
        {
            "id": "dificuldade",
            "label": "Nível de Dificuldade:",
            "type": "radio_group",
            "options": {
                "facil": "Fácil",
                "medio": "Médio",
                "dificil": "Difícil"
            },
            "default": "medio",
            "required": true,
            "validation_message": "Selecione um nível de dificuldade."
        },
        {
            "id": "tipoProva",
            "label": "Tipo de Prova:",
            "type": "radio_group",
            "options": {
                "por_turma": "Por Turma (Única prova/gabarito)",
                "por_estudante": "Por Estudante (Prova/gabarito individual)",
                "50_50": "50/50 (Metade por turma, metade individual)"
            },
            "default": "por_turma",
            "required": true,
            "validation_message": "Selecione um tipo de prova."
        },
        {
            "id": "dataProva",
            "label": "Data da Prova:",
            "type": "radio_group",
            "options": {
                "today": "Hoje",
                "custom": "Inserir Data"
            },
            "default": "today",
            "required": true,
            "validation_message": "Selecione a data da prova."
        },
        {
            "id": "gabaritoNaProva",
            "label": "Incluir Gabarito na Própria Prova:",
            "type": "checkbox",
            "default": false
        },
        {
            "id": "gabaritoGeral",
            "label": "Gerar Gabarito Geral (para todas as provas):",
            "type": "checkbox",
            "default": true
        },
        {
            "id": "folhaResposta",
            "label": "Gerar Folha de Respostas Separada:",
            "type": "checkbox",
            "default": false
        },
        {
            "id": "numQuestoes",
            "label": "Número de Questões:",
            "type": "number",
            "min": 1,
            "max": 50,
            "default": 10,
            "required": true,
            "validation_message": "O número de questões deve ser entre 1 e 50."
        }
    ],
    "configs_gerais": {
        "min_questoes": 1,
        "max_questoes": 50
    },
    "cabecalho_template": {
        "escola": "ESCOLA TÉCNICA ESTADUAL DE PALMARES",
        "curso": "CURSO:TDS",
        "professor": "PROFESSOR: ALBERTO",
        "n_ata": "Nº ata: ________"
    }
